{
  "$schema": "https://codesandbox.io/schemas/tasks.json",
  "setupTasks": ["npm install", "npm start"],
  "tasks": {
    "install-dependencies": {
      "name": "Install Dependencies",
      "command": "npm install",
      "runAtStart": true
    },
    "start-app": {
      "name": "Start App",
      "command": "npm start",
      "runAtStart": true,
      "preview": {
        "port": 4000,
        "prLink": "direct"
      }
    },
    "render-video": {
      "name": "Render Video",
      "command": "npm run build",
      "runAtStart": false
    },
    "download-render": {
      "name": "Download last Render",
      "command": "node server.js",
      "runAtStart": false,
      "preview": {
        "port": 3003
      }
    }
  }
}